<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <Spinner
            android:id="@+id/sp_Colors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:entries="@array/sp_colors"
            android:layout_margin="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_FindDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_find_description"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="onClickShowDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sp_Colors" />

        <TextView
            android:id="@+id/tv_DescriptionTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_FindDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>